#		ROS simmulation for Mobile Robot Olfaction                 #
#                           							                     #
################################################################
-->

<launch>
    <arg name="scenario" default="outdoor_high" />
    <arg name="simulation" default="05ms" />
    <arg name="source_location_x" default="-27.0" />
    <arg name="source_location_y" default="5.00" />
    <arg name="source_location_z" default="10.5" />
   <arg name="GasType" default="0" />
   <arg name="FixedFrame" default="/map" />
        ### ROBOT SIMULATION ###
    <param name="use_sim_time" value="true" />

   <include file="$(find gazebo_ros)/launch/empty_world.launch"> 

 <arg name="world_name" value="$/home/lisa/Gazebo_Gaden/src/controller/worlds/midrise.world"/>
  </include>


<include file="$(find sim_env)/outdoor_high/launch/spawn_four_quadrotors.launch"/>
 
# ===================== GADEN =====================================

    ### NODE environment (for RVIZ visualization) ###
    <node pkg="gaden_environment" type="environment" name="environment" output="screen">
        <param name="verbose" value="false"/>
        <param name="wait_preprocessing" value="false"/>    	  ### wait for the ok from gaden_preprocessing before running
        <param name="fixed_frame" value="map"/>

        # Plot CAD models (Collada format .dae)
        <param name="number_of_CAD" value="9"/>
        <rosparam subst_value="True">
            CAD_0: package://sim_env/$(arg scenario)/cad_models/Hrbuilding1.dae
            CAD_0_color: [0.32, 0.36, 0.36]
            CAD_1: package://sim_env/$(arg scenario)/cad_models/Hrbuilding2.dae
            CAD_1_color: [0.32, 0.36, 0.36]
            CAD_2: package://sim_env/$(arg scenario)/cad_models/Hrbuilding3.dae
            CAD_2_color: [0.32, 0.36, 0.36]
            CAD_3: package://sim_env/$(arg scenario)/cad_models/Hrbuilding4.dae
            CAD_3_color: [0.32, 0.36, 0.36]
            CAD_4: package://sim_env/$(arg scenario)/cad_models/Hrbuilding5.dae
            CAD_4_color: [0.32, 0.36, 0.36]
            CAD_5: package://sim_env/$(arg scenario)/cad_models/Hrbuilding6.dae
            CAD_5_color: [0.32, 0.36, 0.36]
            CAD_6: package://sim_env/$(arg scenario)/cad_models/Hrbuilding7.dae
            CAD_6_color: [0.32, 0.36, 0.36]
            CAD_7: package://sim_env/$(arg scenario)/cad_models/Hrbuilding8.dae
            CAD_7_color: [0.32, 0.36, 0.36]
            CAD_8: package://sim_env/$(arg scenario)/cad_models/Hrbuilding9.dae
            CAD_8_color: [0.32, 0.36, 0.36]
        </rosparam>
	            
        # Plot 3D OccupancyGridmap
      <param name="occupancy3D_data" value="$(find sim_env)/$(arg scenario)/OccupancyGrid3D.csv" />

        # Plot gas sources
        <param name="number_of_sources" value="1"/>
        <param name="source_0_position_x" value="$(arg source_location_x)"/>
        <param name="source_0_position_y" value="$(arg source_location_y)"/>
        <param name="source_0_position_z" value="$(arg source_location_z)"/>
        <rosparam>
            source_0_scale: 0.2
            source_0_color: [0.0, 1.0, 0.0] 
        </rosparam>
    </node>
          
    
    ### NODE PLAYER ###
    #-------------------
 
    ### NODE PLAYER ###
    #-------------------
    <node pkg="gaden_player" type="gaden_player" name="gaden_player" output="screen">
        <param name="verbose" value="false" />
	    <param name="player_freq" value="2" />         ###(Hz) Freq for loading the simulation log_files
	    <param name="initial_iteration" value="0" />
	    <param name="num_simulators" value="1" />      ### Number of simulations to load [1-inf] (useful for multiple sources and gases)
    
        # Data from the "filament_simulator" pkg. Multiple sources can be set here
        <param name="simulation_data_0" value="/home/lisa/Gazebo_Gaden/src/sim_env/outdoor_high/gas_simulations/05ms/FilamentSimulation_gasType_0_sourcePosition_-27.00_5.00_10.50" />
        
    <param name="occupancyFile" value="$(find sim_env)/$(arg scenario)/OccupancyGrid3D.csv" />


        # Loop options        
        <param name="allow_looping" value="true" />
        <param name="loop_from_iteration" value="1" />
        <param name="loop_to_iteration" value="20" />
        
    </node>



      <node name="map_server" pkg="map_server" type="map_server" args="$(find sim_env)/$(arg scenario)/occupancy.yaml">
     <!-- <param name="frame_id" value="map"/> -->
    </node>

    <node name="rviz_player" pkg="rviz" type="rviz" args="-d $(find sim_env)/$(arg scenario)/launch/ros/gaden1.rviz"/>


</launch>
